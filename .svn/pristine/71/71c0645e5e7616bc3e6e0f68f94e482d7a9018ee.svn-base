{
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/LoRaNODE.elf",
            "name": "Debug (OpenOCD)",
            "device": "STM32l0xx",
            "configFiles": [
                "${workspaceRoot}/build/default.cfg"
            ]
        },
        {
            "name": "GDB",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "target": "${workspaceRoot}/build/LoRaNODE.elf", 
            "preLaunchTask": "openocd",
            "gdbpath" : "/usr/bin/arm-none-eabi-gdb",
            "autorun": [
                "target remote localhost:3333",
                "monitor reset halt",
                "load",
                "monitor reset halt" 
                ]
        }



    ]
}