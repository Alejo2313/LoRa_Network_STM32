    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceFolder}/build/LoRaNODE.elf",
            "gdbpath": "/opt/gcc-arm-none-eabi-8-2018-q4-major/bin/arm-none-eabi-gdb",
            "preLaunchTask": "gdb-server",
            "cwd": "${workspaceRoot}",
            "autorun": [
